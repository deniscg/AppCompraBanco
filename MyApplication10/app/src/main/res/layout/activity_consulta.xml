<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.denis.myapplication.MainActivity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="169dp"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txtConsulta_consulta"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="-Lista-" />


        <ListView
            android:id="@+id/lstConsulta_consulta"
            android:layout_width="308dp"
            android:layout_height="439dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">


        <TextView
            android:id="@+id/txtQuantidade_consulta"
            android:layout_width="107dp"
            android:layout_height="34dp"
            android:text="Quantidade"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.066" />

        <EditText
            android:id="@+id/edtQnt_consulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />
        <TextView
            android:id="@+id/txtMercadoria_consulta"
            android:layout_width="107dp"
            android:layout_height="34dp"
            android:text="Mercadoria"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.066" />

        <EditText
            android:id="@+id/edtMerc_consulta"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <CheckBox
            android:id="@+id/chkPerec_consulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perecivel" />

        <Spinner
            android:id="@+id/spnCat_consulta"
            android:layout_width="196dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnAlter_consulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickAction"
            android:text="Alterar" />

        <Button
            android:id="@+id/btnDel_consulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickAction"
            android:text="Deletar" />



    </LinearLayout>



</LinearLayout>

